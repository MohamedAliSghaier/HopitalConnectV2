{% extends 'base.html.twig' %}

{% block title %}Rendez-vous du patient {{ patient_id }}{% endblock %}

{% block body %}
    <h1>Rendez-vous du patient {{ patient_id }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Heure de début</th>
                <th>Heure de fin</th>
                <th>Type de consultation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendezvous in rendezvous_list %}
            <tr>
                <td>{{ rendezvous.date ? rendezvous.date|date('Y-m-d') : '' }}</td>
                <td>{{ rendezvous.startTime ? rendezvous.startTime|date('H:i') : '' }}</td>
                <td>{{ rendezvous.endTime ? rendezvous.endTime|date('H:i') : '' }}</td>
                <td>{{ rendezvous.typeLabel }}</td>
                <td>
                    <a href="{{ path('rendezvous_details', {'id': rendezvous.id}) }}">Voir</a>
                    <a href="{{ path('rendezvous_update', {'id': rendezvous.id}) }}">Modifier</a>
                    <a href="{{ path('rendezvous_delete', {'id': rendezvous.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun rendez-vous trouvé pour ce patient</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% if app.user %}
<a href="{{ path('rendezvous_add', {'userId': app.user.id}) }}">Créer un nouveau rendez-vous</a>
{% else %}
    <p>Please log in to create a new appointment.</p>
{% endif %}
{% endblock %}
