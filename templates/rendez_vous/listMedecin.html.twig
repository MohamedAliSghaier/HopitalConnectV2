{% extends 'base.html.twig' %}

{% block title %}Appointments List | MediGrids{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/LineIcons.2.0.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/tiny-slider.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.css" rel="stylesheet" />


    <style>
        :root {
            --primary: #4a90e2;
            --primary-light: #e8f1fd;
            --secondary: #6ab04c;
            --dark: #2d3748;
            --gray: #718096;
        }
        
        .appointment-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 30px rgba(0,0,0,0.05);
            overflow: hidden;
        }
        
        .appointment-table thead th {
            background: var(--primary);
            color: white;
            padding: 15px 20px;
            font-weight: 500;
            text-align: center;
        }
        
        .appointment-table tbody td {
            vertical-align: middle;
            padding: 12px 15px;
            text-align: center;
        }
        
        .consultation-badge {
            background: var(--primary-light);
            color: var(--primary);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .teleconsultation-badge {
            background: rgba(106, 176, 76, 0.1);
            color: var(--secondary);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .doctor-info {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .doctor-name {
            font-weight: 500;
            color: var(--dark);
            margin-bottom: 2px;
        }
        
        .doctor-title {
            font-size: 0.75rem;
            color: var(--gray);
            background: #f8f9fa;
            padding: 2px 6px;
            border-radius: 4px;
        }
        
        .specialty-badge {
            background: rgba(74, 144, 226, 0.1);
            color: var(--primary);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 500;
            display: inline-block;
            text-transform: capitalize;
        }
        
        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: center;
        }
        
        .btn-sm {
            padding: 0.35rem 0.5rem;
            font-size: 0.875rem;
            border-radius: 0.375rem;
        }
        
        .empty-state {
            padding: 20px;
        }
        
        .search-header {
            background: var(--primary-light);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        
        .filter-btn {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Pagination Styles */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .page-item.active .page-link {
            background-color: var(--primary);
            border-color: var(--primary);
            color: white;
        }

        .page-link {
            color: var(--primary);
            border: 1px solid #dee2e6;
            padding: 0.5rem 0.75rem;
            margin: 0 3px;
            border-radius: 5px;
        }

        .page-link:hover {
            color: var(--primary);
            background-color: var(--primary-light);
            border-color: #dee2e6;
        }

        .pagination-info {
            text-align: center;
            margin-top: 10px;
            color: var(--gray);
            font-size: 0.9rem;
        }
        #calendar {
            max-width: 1100px;
            margin: 40px auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 20px;
        }
        
        .fc-event {
            cursor: pointer;
            border-radius: 4px;
            font-size: 0.85em;
            padding: 2px 5px;
        }
        
        .fc-daygrid-event-dot {
            display: none;
        }
        
        .fc-toolbar-title {
            font-size: 1.5em;
            color: #3a3a3a;
        }
        
        .fc-button {
            background-color: #f8f9fa !important;
            border: 1px solid #ddd !important;
            color: #333 !important;
            text-transform: capitalize;
        }
        
        .fc-button-active {
            background-color: #e9ecef !important;
        }
    </style>
{% endblock %}

{% block body %}
<!-- Header Area -->

<!-- Hero Area -->
<section class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                <div class="hero-text wow fadeInLeft" data-wow-delay=".3s">
                    <h2>Find A Doctor & Book Appointment</h2>
                    <p class="mb-4">Schedule your medical visit with our specialists</p>
                    <div class="button">
                        <a href="{{ path('rendezvous_add') }}" class="btn btn-primary me-2">
                            <i class="lni lni-calendar me-1"></i> Book Appointment
                        </a>
                        <a href="#" class="btn btn-outline">
                            <i class="lni lni-info-circle me-1"></i> About Us
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="hero-image wow fadeInRight" data-wow-delay=".5s">
                    <img src="{{ asset('assets/images/hero/slider-2.png') }}" alt="Doctor" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Appointment List Section -->
<section class="section appointment-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center mb-5">
                    <h3 class="text-uppercase">Your Appointments</h3>
                    <h2>Manage Your Scheduled Visits</h2>
                </div>
                
                <!-- Search Form -->
                <div class="appointment-card mb-4 wow fadeInUp" data-wow-delay=".2s">
                    <div class="p-4">
                        <form method="get" action="{{ path('rendezvous_listmedecin') }}" class="row g-3">
                            <div class="col-md-4">
                                <label for="type" class="form-label">Consultation Type</label>
                                <select id="type" name="type" class="form-select">
                                    <option value="">All Types</option>
                                    <option value="1" {% if search_type == '1' %}selected{% endif %}>
                                        In-person Consultation
                                    </option>
                                    <option value="2" {% if search_type == '2' %}selected{% endif %}>
                                        Teleconsultation
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="date" class="form-label">Date</label>
                                <input type="date" class="form-control" id="date" name="date" 
                                       value="{{ search_date }}">
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <div class="filter-btn w-100">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="lni lni-search-alt me-2"></i> Filter
                                    </button>
                                    {% if search_type or search_date %}
                                        <a href="{{ path('rendezvous_listmedecin') }}" class="btn btn-outline-secondary ms-2">
                                            <i class="lni lni-close"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Results Count -->
                {% if search_type or search_date %}
                    <div class="alert alert-info wow fadeInUp" data-wow-delay=".3s">
                        <i class="lni lni-filter me-2"></i> 
                        Found {{ pagination.getTotalItemCount }} appointment(s) matching your criteria
                    </div>
                {% endif %}
                
                <!-- Appointments Table -->
                <div class="appointment-card">
                    <div class="table-responsive">
                        <table class="table appointment-table mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Time</th>
                                    <th>Patient</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rendezvous in pagination %}
                                <tr class="wow fadeInUp" data-wow-delay=".{{ loop.index0 * 0.1 + 0.3 }}s">
                                    <td>{{ rendezvous.date|date('d M Y') }}</td>
                                    <td>
                                        <span class="{% if rendezvous.typeConsultationId == 1 %}consultation-badge{% else %}teleconsultation-badge{% endif %}">
                                            {% if rendezvous.typeConsultationId == 1 %}
                                                <i class="lni lni-stethoscope me-1"></i> Consultation
                                            {% else %}
                                                <i class="lni lni-video me-1"></i> Téléconsultation
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>{{ rendezvous.startTime|date('H:i') }}</td>
                                    <td>
                                        {% if rendezvous.PatientId is defined and rendezvous.PatientId is not null %}
                                            {% set utilisateurPatient = rendezvous.PatientId.id %}
                                            {% if utilisateurPatient is defined and utilisateurPatient is not null %}
                                                <div class="patient-info">
                                                    <span class="patient-name">{{ utilisateurPatient.prenom }} {{ utilisateurPatient.nom }}</span>
                                                </div>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    
                                    
                                    
                                   
                                </tr>
                                {% else %}
                                <tr class="wow fadeInUp" data-wow-delay=".3s">
                                    <td colspan="6" class="text-center py-5">
                                        <div class="empty-state">
                                            <i class="lni lni-calendar text-muted" style="font-size: 3rem;"></i>
                                            <h4 class="mt-3">No Appointments Found</h4>
                                            <p class="text-muted mb-4">
                                                {% if search_type or search_date %}
                                                    No appointments match your search criteria
                                                {% else %}
                                                    You don't have any appointments scheduled yet
                                                {% endif %}
                                            </p>
                                            <a href="{{ path('rendezvous_add') }}" class="btn btn-primary">
                                                <i class="lni lni-circle-plus me-2"></i> Book New Appointment
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        
{# Pagination #}
{% if pagination is defined and pagination.getTotalItemCount > 0 %}
    <div class="pagination-container wow fadeInUp" data-wow-delay=".4s">
        <ul class="pagination">
            <li class="page-item {% if pagination.getCurrentPageNumber == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path('rendezvous_listmedecin', {page: 1, date: search_date, type: search_type}) }}" title="First page">
                    <i class="lni lni-chevrons-left"></i>
                </a>
            </li>
            <li class="page-item {% if pagination.getCurrentPageNumber == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path('rendezvous_listmedecin', {page: pagination.getCurrentPageNumber - 1, date: search_date, type: search_type}) }}" title="Previous">
                    <i class="lni lni-chevron-left"></i>
                </a>
            </li>

            {# Afficher les numéros de page #}
            {% for page in pagination.getPaginationData.pagesInRange %}
                <li class="page-item {% if page == pagination.getCurrentPageNumber %}active{% endif %}">
                    <a class="page-link" href="{{ path('rendezvous_listmedecin', {page: page, date: search_date, type: search_type}) }}">
                        {{ page }}
                    </a>
                </li>
            {% endfor %}

            <li class="page-item {% if pagination.getCurrentPageNumber == pagination.getPageCount %}disabled{% endif %}">
                <a class="page-link" href="{{ path('rendezvous_listmedecin', {page: pagination.getCurrentPageNumber + 1, date: search_date, type: search_type}) }}" title="Next">
                    <i class="lni lni-chevron-right"></i>
                </a>
            </li>
            <li class="page-item {% if pagination.getCurrentPageNumber == pagination.getPageCount %}disabled{% endif %}">
                <a class="page-link" href="{{ path('rendezvous_listmedecin', {page: pagination.getPageCount, date: search_date, type: search_type}) }}" title="Last page">
                    <i class="lni lni-chevrons-right"></i>
                </a>
            </li>
        </ul>

        <div class="pagination-info-container">
            <span class="pagination-info">
                <i class="lni lni-notepad"></i> Showing 
                {{ (pagination.getItemNumberPerPage * (pagination.getCurrentPageNumber - 1)) + 1 }} - 
                {% if (pagination.getItemNumberPerPage * pagination.getCurrentPageNumber) > pagination.getTotalItemCount %}
                    {{ pagination.getTotalItemCount }}
                {% else %}
                    {{ pagination.getItemNumberPerPage * pagination.getCurrentPageNumber }}
                {% endif %}
                of {{ pagination.getTotalItemCount }} appointments
            </span>
            
        </div>
        
    </div>
{% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid py-4">
        <div id="calendar"></div>
    </div>
    
</section>


<!-- Footer Area -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/js/wow.min.js') }}"></script>
    <script src="{{ asset('assets/js/tiny-slider.js') }}"></script>
    <script src="{{ asset('assets/js/glightbox.min.js') }}"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/locales-all.min.js"></script>

    <script>
        // Initialize WOW.js
        new WOW().init();
        
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Set today's date as default in date picker
            const dateInput = document.getElementById('date');
            if (dateInput && !dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }
        });
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr',
                firstDay: 1, // Monday as first day
                navLinks: true, // can click day/week names to navigate views
                editable: false,
                selectable: false,
                nowIndicator: true,
                dayMaxEvents: true, // allow "more" link when too many events
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                buttonText: {
                    today: 'Aujourd\'hui',
                    month: 'Mois',
                    week: 'Semaine',
                    day: 'Jour',
                    list: 'Liste'
                },
                events: '/calendar/eventmedecin',
                eventClick: function(info) {
                    // Show event details in a modal
                    const event = info.event;
                    const details = `
                        <h5>${event.title}</h5>
                        <p><strong>Patient:</strong> ${event.extendedProps.patient}</p>
                        <p><strong>Médecin:</strong> ${event.extendedProps.medecin}</p>
                        <p><strong>Spécialité:</strong> ${event.extendedProps.specialite}</p>
                        <p><strong>Heure:</strong> ${event.start.toLocaleTimeString()}</p>
                        <p><strong>Type:</strong> ${event.extendedProps.type}</p>
                    `;
                    
                    // You can use your preferred modal implementation here
                    // This example uses the browser's alert for simplicity
                    alert(details);
                    
                    // If you're using Bootstrap, you could do:
                    // $('#eventModal .modal-body').html(details);
                    // $('#eventModal').modal('show');
                },
                eventContent: function(arg) {
                    // Customize event display
                    const timeText = arg.timeText;
                    const titleText = arg.event.title;
                    
                    const arrayOfDomNodes = [];
                    
                    // Create a container div
                    const container = document.createElement('div');
                    container.className = 'fc-event-container';
                    
                    // Add time if available
                    if (timeText) {
                        const timeEl = document.createElement('div');
                        timeEl.className = 'fc-event-time';
                        timeEl.innerText = timeText;
                        container.appendChild(timeEl);
                    }
                    
                    // Add title
                    const titleEl = document.createElement('div');
                    titleEl.className = 'fc-event-title';
                    titleEl.innerText = titleText;
                    container.appendChild(titleEl);
                    
                    arrayOfDomNodes.push(container);
                    
                    return { domNodes: arrayOfDomNodes };
                }
            });

            calendar.render();
        });
    </script>
{% endblock %}