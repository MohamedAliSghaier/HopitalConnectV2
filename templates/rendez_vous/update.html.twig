{% extends 'base.html.twig' %}

{% block title %}{{ 'add' in app.request.attributes.get('_route') ? 'New' : 'Edit' }} Appointment{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .rv-form-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        max-width: 700px;
        margin: 0 auto;
    }

    .rv-form-header {
        border-left: 4px solid #4a90e2;
        padding-left: 1rem;
        margin-bottom: 2rem;
    }

    .rv-time-inputs {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .flatpickr-input {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.75rem 1.25rem;
        width: 100%;
        transition: all 0.3s ease;
    }

    .flatpickr-input:focus {
        border-color: #4a90e2;
        box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.2);
    }
</style>
{% endblock %}

{% block body %}
<div class="rv-form-card">
    <h2 class="h4 rv-form-header">
        <i class="fas fa-{{ 'add' in app.request.attributes.get('_route') ? 'plus' : 'edit' }} me-2"></i>
        {{ 'add' in app.request.attributes.get('_route') ? 'New' : 'Edit' }} Appointment
    </h2>

    {{ form_start(form) }}
    
    <div class="mb-4">
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'flatpickr-date'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.type_consultation_id) }}
        {{ form_widget(form.type_consultation_id, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="rv-time-inputs">
        <div>
            {{ form_label(form.start_time) }}
            {{ form_widget(form.start_time, {'attr': {'class': 'flatpickr-time'}}) }}
        </div>
    </div>

    <div class="d-flex justify-content-end gap-3 mt-4">
        <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i>Save
        </button>
        <a href="{{ path('rendezvous_listpatient') }}" class="btn btn-outline-secondary px-4">
            <i class="fas fa-times me-2"></i>Cancel
        </a>
    </div>

    {{ form_end(form) }}
</div>

<script>
    flatpickr('.flatpickr-date', {
        dateFormat: "Y-m-d",
        locale: "en"
    });

    flatpickr('.flatpickr-time', {
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
        time_24hr: true
    });
</script>
{% endblock %}
