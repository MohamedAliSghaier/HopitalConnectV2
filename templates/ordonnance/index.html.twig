{% extends 'base.html.twig' %}

{% block title %}Liste des Ordonnances{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Ordonnances</h1>

    {% if ordonnances is empty %}
        <div class="alert alert-info">
            Aucune ordonnance trouvée.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date de prescription</th>
                        <th>Médecin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ordonnance in ordonnances %}
                        <tr>
                            <td>{{ ordonnance.date_prescription|date('d/m/Y') }}</td>
                            <td>{{ ordonnance.medecin.getNom() }}</td>
                            <td>
                                <a href="{{ path('app_ordonnance_show', {'id': ordonnance.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_ordonnance_qr_code', {'id': ordonnance.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-qrcode"></i> QR Code
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
