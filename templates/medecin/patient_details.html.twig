{% extends 'base.html.twig' %}

{% block title %}Détails du Patient{% endblock %}

{% block body %}
<br><br><br><br><br><br>
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <a href="{{ path('medecin_patients') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        {# Medical Record #}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Dossier Médical</h3>
                </div>
                <div class="card-body">
                    {% if dossier_medical %}
                        <div class="mb-3">
                            <h5 class="text-primary">Informations Physiques</h5>
                            <p><strong>Taille:</strong> {{ dossier_medical.getTaille() }} cm</p>
                            <p><strong>Poids:</strong> {{ dossier_medical.getPoids() }} kg</p>
                        </div>
                        <div class="mb-3">
                            <h5 class="text-primary">État de Santé</h5>
                            <p><strong>Maladies:</strong> {{ dossier_medical.getMaladies() }}</p>
                            {% if dossier_medical.getMaladiesDetails() %}
                                <p class="text-muted small">{{ dossier_medical.getMaladiesDetails() }}</p>
                            {% endif %}
                            <p><strong>Allergies:</strong> {{ dossier_medical.getAllergies() }}</p>
                            {% if dossier_medical.getAllergiesDetails() %}
                                <p class="text-muted small">{{ dossier_medical.getAllergiesDetails() }}</p>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <h5 class="text-primary">Antécédents</h5>
                            <p><strong>Cardiovasculaires:</strong> {{ dossier_medical.getAntecedentsCardiovasculairesFamiliaux() }}</p>
                            {% if dossier_medical.getAntecedentsCardiovasculairesFamiliauxDetails() %}
                                <p class="text-muted small">{{ dossier_medical.getAntecedentsCardiovasculairesFamiliauxDetails() }}</p>
                            {% endif %}
                            <p><strong>Chirurgicaux:</strong> {{ dossier_medical.getAntecedentsChirurgicaux() }}</p>
                            {% if dossier_medical.getAntecedentsChirurgicauxDetails() %}
                                <p class="text-muted small">{{ dossier_medical.getAntecedentsChirurgicauxDetails() }}</p>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <h5 class="text-primary">Mode de Vie</h5>
                            <p><strong>Profession:</strong> {{ dossier_medical.getProfession() }}</p>
                            <p><strong>Niveau de stress:</strong> {{ dossier_medical.getNiveauDeStress() }}</p>
                            <p><strong>Qualité de sommeil:</strong> {{ dossier_medical.getQualiteDeSommeil() }}</p>
                            <p><strong>Activité physique:</strong> {{ dossier_medical.getActivitePhysique() }}</p>
                            <p><strong>Situation familiale:</strong> {{ dossier_medical.getSituationFamiliale() }}</p>
                        </div>
                    {% else %}
                        <p class="text-muted">Aucun dossier médical disponible</p>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Insurance Information #}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">Informations d'Assurance</h3>
                </div>
                <div class="card-body">
                    {% if assurance %}
                        <div class="mb-3">
                            <h5 class="text-success">Détails de l'Assurance</h5>
                            <p><strong>Nom de l'assureur:</strong> {{ assurance.getNomAssureur() }}</p>
                            <p><strong>Type d'assureur:</strong> {{ assurance.getTypeAssureur() }}</p>
                            <p><strong>Numéro de police:</strong> {{ assurance.getNumeroPolice() }}</p>
                        </div>
                        <div class="mb-3">
                            <h5 class="text-success">Informations du Titulaire</h5>
                            <p><strong>Nom du titulaire:</strong> {{ assurance.getNomTitulaire() }}</p>
                            <p><strong>Type de couverture:</strong> {{ assurance.getTypeCouverture() }}</p>
                        </div>
                        <div class="mb-3">
                            <h5 class="text-success">Période de Validité</h5>
                            <p><strong>Date de début:</strong> {{ assurance.getDateDebut()|date('d/m/Y') }}</p>
                            <p><strong>Date de fin:</strong> {{ assurance.getDateFin()|date('d/m/Y') }}</p>
                        </div>
                    {% else %}
                        <p class="text-muted">Aucune information d'assurance disponible</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 