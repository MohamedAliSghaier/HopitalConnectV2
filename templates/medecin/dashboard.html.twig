{% extends 'base_internal.html.twig' %}

{% block title %}Tableau de Bord Médecin{% endblock %}

{% block body %}
<div class="content-container mt-100">
    <div class="rv-card p-4 shadow-sm rounded">
        <!-- Welcome Section -->
        <div class="text-center mb-4">
            <h1 class="h3 text-primary">Bienvenue, {{ medecinName }}!</h1>
            <p class="text-muted">Gérez vos ordonnances et vos patients depuis ce tableau de bord.</p>
        </div>

        <!-- Additional Information Section -->
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Vos Patients</h5>
                        <p class="card-text text-muted">Accédez aux informations de vos patients et gérez leurs ordonnances.</p>
                        <a href="#" class="btn btn-outline-primary">Voir les Patients</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Statistiques</h5>
                        <p class="card-text text-muted">Consultez vos statistiques d'ordonnances et de consultations.</p>
                        <a href="#" class="btn btn-outline-primary">Voir les Statistiques</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}