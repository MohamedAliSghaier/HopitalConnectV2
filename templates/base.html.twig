<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MediGrids Appointments{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/images/favicon.svg') }}">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- Keep your existing CDNs -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
            
            <!-- Add only necessary MediGrids CSS -->
            <link rel="stylesheet" href="{{ asset('assets/css/LineIcons.2.0.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
            
            <!-- MediGrids fonts -->
            <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
            
            <!-- Add only necessary MediGrids JS -->
            <script src="{{ asset('assets/js/main.js') }}"></script>
        {% endblock %}
    </head>
    <body class="medigrids-body">
        <div class="container py-4">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>