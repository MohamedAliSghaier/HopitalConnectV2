{% extends 'base_internal.html.twig' %}

{% block title %}Liste des Médicaments{% endblock %}

{% block body %}
<div class="content-container mt-100">
    <div class="rv-card p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0"><i class="fas fa-pills me-2"></i>Liste des Médicaments</h1>
            <div class="d-flex gap-2">
                <a href="{{ path('medicament_add') }}" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Ajouter un médicament
                </a>
            </div>
        </div>

        <table class="rv-table table table-hover align-middle">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for medicament in medicament_list %}
                <tr>
                    <td>{{ medicament.nom }}</td>
                    <td><span class="rv-badge">{{ medicament.stock }}</span></td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="{{ path('medicament_details', {'id': medicament.id}) }}" 
                               class="btn btn-sm btn-outline-primary">
                               <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('medicament_update', {'id': medicament.id}) }}" 
                               class="btn btn-sm btn-outline-warning">
                               <i class="fas fa-edit"></i>
                            </a>
                            <a href="{{ path('medicament_delete', {'id': medicament.id}) }}" 
                               class="btn btn-sm btn-outline-danger" 
                               onclick="return confirm('Supprimer ce médicament ?')">
                               <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted py-4">Aucun médicament trouvé</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}