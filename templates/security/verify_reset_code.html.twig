{% extends 'base.html.twig' %}

{% block title %}Vérification du code{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1>Vérifiez votre code</h1>

  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ label }}">{{ message }}</div>
    {% endfor %}
  {% endfor %}

  <form method="post" action="{{ path('app_verify_reset_code') }}">
    <div class="mb-3">
      <label for="reset_code" class="form-label">Entrez le code reçu par email</label>
      <input type="text" id="reset_code" name="reset_code" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-secondary">Vérifier le code</button>
  </form>

  <p class="mt-3">
    <a href="{{ path('app_forgot_password') }}">Renvoyer un nouveau code</a>
  </p>
</div>
{% endblock %}
