{% extends 'base.html.twig' %}

{% block title %}Vérification du code{% endblock %}

{% block body %}
<div class="content-container mt-200">
    <h1>Vérification du code</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.reset_code) }}
            {{ form_widget(form.reset_code, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.reset_code) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.new_password) }}
            {{ form_widget(form.new_password, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.new_password) }}
        </div>
        <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(form) }}
{% endblock %}