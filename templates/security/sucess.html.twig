{% extends 'base.html.twig' %}

{% block title %}Connexion réussie | MediGrids{% endblock %}

{% block body %}
<section class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-12">
                <div class="hero-content wow fadeInLeft">
                    <h2>Connexion réussie !</h2>
                    <div class="alert alert-success">
                        <p>Bonjour <strong>{{ user.prenom }} {{ user.nom }}</strong></p>
                        <p>Vous êtes connecté en tant que <strong>{{ user.role }}</strong></p>
                    </div>
                    <div class="button">
                        <a href="{{ path('app_home') }}" class="btn">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="hero-image wow fadeInRight">
                    <img src="{{ asset('assets/images/hero/success.png') }}" alt="Succès">
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}