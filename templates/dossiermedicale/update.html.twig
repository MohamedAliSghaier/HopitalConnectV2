{% extends 'base_patient.html.twig' %}

{% block title %}{{ 'add' in app.request.attributes.get('_route') ? 'New' : 'Edit' }} Medical Record{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .dm-form-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .dm-form-header {
        border-left: 4px solid #4a90e2;
        padding-left: 1rem;
        margin-bottom: 2rem;
    }

    .form-section {
        margin-bottom: 1.5rem;
    }

    .form-control,
    .form-select {
        border-radius: 10px !important;
    }
</style>
{% endblock %}

{% block body %}
<div class="dm-form-card">
    <h2 class="h4 dm-form-header">
        <i class="fas fa-{{ 'add' in app.request.attributes.get('_route') ? 'plus' : 'edit' }} me-2"></i>
        {{ 'add' in app.request.attributes.get('_route') ? 'New' : 'Edit' }} Medical Record
    </h2>

    {{ form_start(form) }}

    <div class="form-section">
        {{ form_label(form.id_patient) }}
        {{ form_widget(form.id_patient, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.taille) }}
        {{ form_widget(form.taille, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.poids) }}
        {{ form_widget(form.poids, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.maladies) }}
        {{ form_widget(form.maladies, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.antecedents_cardiovasculaires_familiaux) }}
        {{ form_widget(form.antecedents_cardiovasculaires_familiaux, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.asthmatique) }}
        {{ form_widget(form.asthmatique, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.suivi_dentaire_regulier) }}
        {{ form_widget(form.suivi_dentaire_regulier, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.antecedents_chirurgicaux) }}
        {{ form_widget(form.antecedents_chirurgicaux, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.allergies) }}
        {{ form_widget(form.allergies, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.profession) }}
        {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.niveau_de_stress) }}
        {{ form_widget(form.niveau_de_stress, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.qualite_de_sommeil) }}
        {{ form_widget(form.qualite_de_sommeil, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.activite_physique) }}
        {{ form_widget(form.activite_physique, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="form-section">
        {{ form_label(form.situation_familiale) }}
        {{ form_widget(form.situation_familiale, {'attr': {'class': 'form-select'}}) }}
    </div>

    <div class="d-flex justify-content-end gap-3 mt-4">
        <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i>Save
        </button>
        <a href="{{ path('dossiermedicale_list') }}" class="btn btn-outline-secondary px-4">
            <i class="fas fa-times me-2"></i>Cancel
        </a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
