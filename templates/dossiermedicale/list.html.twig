{% extends 'base_internal.html.twig' %}

{% block title %}Liste des Dossiers Médicaux{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .dossier-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .dossier-card h5 {
        color: #4a90e2;
        margin-bottom: 1rem;
    }

    .dossier-field {
        margin-bottom: 0.75rem;
    }

    .dossier-field label {
        font-weight: bold;
        display: block;
        margin-bottom: 0.25rem;
    }

    .dossier-field span {
        display: block;
        color: #333;
    }

    .details-badge {
        background: rgba(106, 176, 76, 0.1);
        color: #6ab04c;
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .action-buttons {
        margin-top: 1rem;
        display: flex;
        gap: 0.5rem;
    }
</style>
{% endblock %}

{% block body %}
<br><br><br><br><br><br>
<div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-file-medical-alt me-2"></i>Dossier Médicale</h1>
       
    </div>

    {% for dossier in dossiermedicale_list %}
    <div class="dossier-card">
        <h5>Dossier Médical </h5>

        <div class="dossier-field">
            <label>Taille (cm):</label>
            <span>{{ dossier.taille }}</span>
        </div>

        <div class="dossier-field">
            <label>Poids (kg):</label>
            <span>{{ dossier.poids }}</span>
        </div>

        <div class="dossier-field">
            <label>Maladies:</label>
            <span>{{ dossier.maladies }}</span>
            {% if dossier.maladies == 'Oui' and dossier.maladiesDetails %}
                <span class="details-badge">{{ dossier.maladiesDetails }}</span>
            {% endif %}
        </div>

        <div class="dossier-field">
            <label>Antécédents Cardio:</label>
            <span>{{ dossier.antecedentsCardiovasculairesFamiliaux }}</span>
            {% if dossier.antecedentsCardiovasculairesFamiliaux == 'Oui' and dossier.antecedentsCardiovasculairesFamiliauxDetails %}
                <span class="details-badge">{{ dossier.antecedentsCardiovasculairesFamiliauxDetails }}</span>
            {% endif %}
        </div>

        <div class="dossier-field">
            <label>Asthmatique:</label>
            <span>{{ dossier.asthmatique }}</span>
            {% if dossier.asthmatique == 'Oui' and dossier.asthmatiqueDetails %}
                <span class="details-badge">{{ dossier.asthmatiqueDetails }}</span>
            {% endif %}
        </div>

        <div class="dossier-field">
            <label>Suivi Dentaire:</label>
            <span>{{ dossier.suiviDentaireRegulier }}</span>
            {% if dossier.suiviDentaireRegulier == 'Oui' and dossier.suiviDentaireRegulierDetails %}
                <span class="details-badge">{{ dossier.suiviDentaireRegulierDetails }}</span>
            {% endif %}
        </div>

        <div class="dossier-field">
            <label>Antécédents Chirurgicaux:</label>
            <span>{{ dossier.antecedentsChirurgicaux }}</span>
            {% if dossier.antecedentsChirurgicaux == 'Oui' and dossier.antecedentsChirurgicauxDetails %}
                <span class="details-badge">{{ dossier.antecedentsChirurgicauxDetails }}</span>
            {% endif %}
        </div>

        <div class="dossier-field">
            <label>Allergies:</label>
            <span>{{ dossier.allergies }}</span>
            {% if dossier.allergies == 'Oui' and dossier.allergiesDetails %}
                <span class="details-badge">{{ dossier.allergiesDetails }}</span>
            {% endif %}
        </div>

        <div class="dossier-field">
            <label>Profession:</label>
            <span>{{ dossier.profession }}</span>
        </div>

        <div class="dossier-field">
            <label>Niveau de Stress:</label>
            <span>{{ dossier.niveauDeStress }}</span>
        </div>

        <div class="dossier-field">
            <label>Qualité de Sommeil:</label>
            <span>{{ dossier.qualiteDeSommeil }}</span>
        </div>

        <div class="dossier-field">
            <label>Activité Physique:</label>
            <span>{{ dossier.activitePhysique }}</span>
        </div>

        <div class="dossier-field">
            <label>Situation Familiale:</label>
            <span>{{ dossier.situationFamiliale }}</span>
        </div>

        <div class="action-buttons">
            <a href="{{ path('dossiermedicale_update', {'id': dossier.id}) }}" 
               class="btn btn-sm btn-outline-warning"
               title="Modifier">
                <i class="fas fa-pencil-alt"></i> Modifier
            </a>
            <a href="{{ path('dossiermedicale_delete', {'id': dossier.id}) }}" 
               class="btn btn-sm btn-outline-danger"
               title="Supprimer"
               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier médical ?')">
                <i class="fas fa-trash"></i> Supprimer
            </a>
        </div>
    </div>
    {% else %}
    <div class="text-center text-muted py-4">Aucun dossier médical trouvé</div>
    {% endfor %}
</div>
{% endblock %}