{% extends 'base_internal.html.twig' %}

{% block title %}Liste des Dossiers Médicaux{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .rv-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .rv-table {
        --bs-table-bg: transparent;
        --bs-table-striped-bg: rgba(74, 144, 226, 0.03);
    }

    .rv-table th {
        background: linear-gradient(135deg, #4a90e2, #6c5ce7);
        color: white;
        border: none;
        white-space: nowrap;
    }

    .rv-badge {
        background: rgba(74, 144, 226, 0.1);
        color: #4a90e2;
        border-radius: 8px;
        padding: 0.5rem 1rem;
    }

    .table td {
        vertical-align: middle;
    }

    .rv-scroll {
        overflow-x: auto;
    }

    .details-badge {
        background: rgba(106, 176, 76, 0.1);
        color: #6ab04c;
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: block;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
    }
</style>
{% endblock %}

{% block body %}
<br><br><br><br><br><br>
<div class="rv-card p-4 rv-scroll">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-file-medical-alt me-2"></i>Dossiers Médicaux</h1>
        <a href="{{ path('dossiermedicale_add') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Nouveau Dossier
        </a>
    </div>

    <table class="rv-table table table-hover align-middle table-bordered">
        <thead>
            <tr>
                <th>Taille (cm)</th>
                <th>Poids (kg)</th>
                <th>Maladies</th>
                <th>Antécédents Cardio</th>
                <th>Asthmatique</th>
                <th>Suivi Dentaire</th>
                <th>Antécédents Chirurgicaux</th>
                <th>Allergies</th>
                <th>Profession</th>
                <th>Niveau Stress</th>
                <th>Qualité Sommeil</th>
                <th>Activité Physique</th>
                <th>Situation Familiale</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for dossier in dossiermedicale_list %}
            <tr>
                <td>{{ dossier.taille }}</td>
                <td>{{ dossier.poids }}</td>
                
                <td>
                    {{ dossier.maladies }}
                    {% if dossier.maladies == 'Oui' and dossier.maladiesDetails %}
                        <span class="details-badge">{{ dossier.maladiesDetails }}</span>
                    {% endif %}
                </td>
                
                <td>
                    {{ dossier.antecedentsCardiovasculairesFamiliaux }}
                    {% if dossier.antecedentsCardiovasculairesFamiliaux == 'Oui' and dossier.antecedentsCardiovasculairesFamiliauxDetails %}
                        <span class="details-badge">{{ dossier.antecedentsCardiovasculairesFamiliauxDetails }}</span>
                    {% endif %}
                </td>
                
                <td>
                    {{ dossier.asthmatique }}
                    {% if dossier.asthmatique == 'Oui' and dossier.asthmatiqueDetails %}
                        <span class="details-badge">{{ dossier.asthmatiqueDetails }}</span>
                    {% endif %}
                </td>
                
                <td>
                    {{ dossier.suiviDentaireRegulier }}
                    {% if dossier.suiviDentaireRegulier == 'Oui' and dossier.suiviDentaireRegulierDetails %}
                        <span class="details-badge">{{ dossier.suiviDentaireRegulierDetails }}</span>
                    {% endif %}
                </td>
                
                <td>
                    {{ dossier.antecedentsChirurgicaux }}
                    {% if dossier.antecedentsChirurgicaux == 'Oui' and dossier.antecedentsChirurgicauxDetails %}
                        <span class="details-badge">{{ dossier.antecedentsChirurgicauxDetails }}</span>
                    {% endif %}
                </td>
                
                <td>
                    {{ dossier.allergies }}
                    {% if dossier.allergies == 'Oui' and dossier.allergiesDetails %}
                        <span class="details-badge">{{ dossier.allergiesDetails }}</span>
                    {% endif %}
                </td>
                
                <td>{{ dossier.profession }}</td>
                <td>{{ dossier.niveauDeStress }}</td>
                <td>{{ dossier.qualiteDeSommeil }}</td>
                <td>{{ dossier.activitePhysique }}</td>
                <td>{{ dossier.situationFamiliale }}</td>
                <td>
                    <div class="action-buttons">
                        <a href="{{ path('dossiermedicale_update', {'id': dossier.id}) }}" 
                           class="btn btn-sm btn-outline-warning btn-action"
                           title="Modifier">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="{{ path('dossiermedicale_delete', {'id': dossier.id}) }}" 
                           class="btn btn-sm btn-outline-danger btn-action"
                           title="Supprimer"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier médical ?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="14" class="text-center text-muted py-4">Aucun dossier médical trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}